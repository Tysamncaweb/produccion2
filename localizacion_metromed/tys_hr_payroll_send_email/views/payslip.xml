<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hr_payslip_form_inh" model="ir.ui.view">
            <field name="name">view.hr.payslip.form.inh</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_payslip_done']" position="before">
                    <button name="action_send_email" type="object" string="Send receipts by email" class="oe_highlight" attrs="{'invisible':[('state', 'in', ['draft','cancel'])]}" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>